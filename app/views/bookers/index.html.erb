<p id="notice"><%= notice %></p>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book|%>
    <tr>
      <td class="title-index"><%= book.title %></td>
      <td class="body-index"><%= book.body %></td>
      <td class="show"><%= link_to "Show", book_path(book.id) %></td>
      <td class="edit"><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td class="destroy"><%= link_to "Destroy", destroy_book_path(book.id),method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model: @book, url:books_path, local:true do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li>error: <%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <label>title</label>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="action">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>
